---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE } from '../consts';

const {
  title,
  description,
  image,
  pubDate,
  updatedDate,
  authorName,
  ogType,
  tags,
  canonical,
  relPrev,
  relNext,
} = Astro.props;

// Ensure title follows pattern: 'Page — Lin Lib' or just 'Lin Lib'
const finalTitle = title && (title.includes('—') || title.includes('|')) 
  ? title 
  : title ? `${title} — ${SITE_TITLE}` : SITE_TITLE;

const GA_ID = import.meta.env.PUBLIC_GA_ID;
const isProd = import.meta.env.PROD;
---

<html lang="en">
  <head>
    <BaseHead
      title={finalTitle}
      description={description}
      image={image}
      pubDate={pubDate}
      updatedDate={updatedDate}
      authorName={authorName}
      ogType={ogType}
      tags={tags}
      canonical={canonical}
      relPrev={relPrev}
      relNext={relNext}
    />

    {
      isProd && GA_ID && (
        <>
          <script
            is:inline
            async
            src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}
          />
          <script
            is:inline
            set:html={`
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', '${GA_ID}', { anonymize_ip: true });
          `}
          />
        </>
      )
    }
  </head>
  <body>
    <!-- Site Header (full width) -->
    <Header currentPath={Astro.url.pathname} />

    <!-- Main content area (constrained width) -->
    <main class="page-main">
      <slot />
    </main>

    <!-- Site Footer -->
    <Footer />
  </body>
</html>

<style>
  .page-main {
    max-width: var(--max-content-width); /* ✅ use global variable */
    margin: var(--space-lg) auto;
    padding: 0 var(--space-md);
  }
</style>
