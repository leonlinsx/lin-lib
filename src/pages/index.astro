---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostList from '../components/PostList.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');

// Get latest 3 posts sorted by date
const latestPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout
  title="LinLib — Wine Education"
  description="Wine education and exploration by Leon Lin"
>
  <!-- Hero Section -->
  <section class="hero">
    <h1>Explore Wine with Purpose</h1>
    <p class="hero-text">
      LinLib is your guide to understanding wine — from fundamentals to nuances. 
      Learn, taste, and discover together.
    </p>
    <div class="hero-ctas">
      <a href="/writing" class="cta-button primary">Explore Wine Education</a>
      <a href="mailto:contact@leonlins.com" class="cta-button secondary">Get in Touch</a>
    </div>
  </section>

  <!-- Latest Articles -->
  <section class="content-section">
    <h2>Latest Articles</h2>
    <p class="subtext">Read our most recent explorations</p>
    <PostList posts={latestPosts} />
  </section>

  <!-- About Teaser -->
  <section class="about-teaser">
    <h2>About LinLib</h2>
    <p>
      LinLib is dedicated to wine education and exploration. Whether you're just 
      beginning your wine journey or looking to deepen your knowledge, you'll find 
      thoughtful essays and practical guides here.
    </p>
    <p>
      <a href="/about">Learn more about the mission →</a>
    </p>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    margin-bottom: var(--space-xl);
    padding: var(--space-xl) var(--space-md);
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: var(--space-md);
    line-height: 1.2;
  }

  .hero-text {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto var(--space-lg);
    line-height: 1.6;
  }

  .hero-ctas {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    padding: var(--space-sm) var(--space-lg);
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
    display: inline-block;
  }

  .cta-button.primary {
    background: var(--color-link);
    color: white;
  }

  .cta-button.primary:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .cta-button.secondary {
    border: 2px solid var(--color-link);
    color: var(--color-link);
  }

  .cta-button.secondary:hover {
    background: var(--color-link);
    color: white;
  }

  .content-section {
    margin: var(--space-xl) 0;
  }

  .content-section h2 {
    margin-bottom: var(--space-md);
  }

  .about-teaser {
    margin-top: var(--space-xl);
    padding: var(--space-lg);
    background: var(--color-bg-alt);
    border-radius: 8px;
  }

  .about-teaser p {
    margin-bottom: var(--space-md);
    line-height: 1.6;
  }

  .about-teaser a {
    color: var(--color-link);
    text-decoration: none;
    font-weight: 500;
  }

  .about-teaser a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .hero-text {
      font-size: 1rem;
    }

    .hero-ctas {
      flex-direction: column;
      align-items: center;
    }

    .cta-button {
      width: 100%;
      text-align: center;
    }
  }
</style>
